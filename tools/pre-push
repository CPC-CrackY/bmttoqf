#!/bin/sh

declare ret=0
if [ -n "${DO_E2E_TESTS}" -a "${DO_E2E_TESTS}" = '1' ]
then

	echo "
	---------------------------------------------------------------
		 __                     __     __       ___      
		|__) |    /\  \_/ |  | |__) | / _  |__|  |      	
		|    |__ /--\  |  |/\| | \  | \__) |  |  | 			
															
	 __       __       __       __       __    ___  __  __ ___  __ 
	|_  |\ | |  \  __   _)  __ |_  |\ | |  \    |  |_  (_   |  (_  
	|__ | \| |__/      /__     |__ | \| |__/    |  |__ __)  |  __) 

	---------------------------------------------------------------
	"
	npx playwright test paco-base --workers=2 --reporter=line --reporter=html
	ret=$?
fi
exit ${ret}