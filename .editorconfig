# EditorConfig is awesome: https://editorconfig.org
root = true

[*.sh]
end_of_line = lf

[*.php]
indent_style = space
indent_size = 4

[*.{js,ts}]
indent_style = space
indent_size = 2
quote_type = single

[*.{css,scss}]
indent_style = space
indent_size = 3

[*.md]
max_line_length = off
trim_trailing_whitespace = false
